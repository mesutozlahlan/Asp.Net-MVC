@model TimeZona.Models.ADMİNLOGİN
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Log in</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/admin/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/Content/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/admin/dist/css/adminlte.min.css">
    <style>
        .field-validation-error {
            color: red
        }
    </style>

</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Admin</b>Sayfası</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Oturumunuzu Başlatmak İçin Giriş Yapın</p>
                @*<form action="../../index3.html" method="post">*@
                @using (Html.BeginForm("Alogin", "AdminLogin", new { ReturnUrl = Request.QueryString["ReturnUrl"], FormMethod.Post }))
                {
                    @Html.AntiForgeryToken()
                    <div class="input-group mb-3">
                        @*<input type="email" class="form-control" placeholder="Kullanıcı Adı">*@
                        @Html.TextBoxFor(m => m.NAMESURNAME, new { @class = "form-control", placeholder = "Kullanıcı Adı", autofocus = "auto" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.NAMESURNAME)
                    <div class="input-group mb-3">
                        @*<input type="password" class="form-control" placeholder="Şifre">*@
                        @Html.PasswordFor(m => m.PASSWORD, new { @class = "form-control", placeholder = "Şifre" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.PASSWORD)
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                @*<input type="checkbox" id="remember">*@
                                <label>
                                    @Html.CheckBoxFor(m => m.BeniHatirla)
                                    Beni Hatırla
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                        </div>
                        <!-- /.col -->
                    </div>
                    @*</form>*@
                }
                <!-- /.social-auth-links -->

                @if (ViewBag.Hata != null)
                {
                    <div class="alert alert-danger mt-4">
                        @ViewBag.Hata
                    </div>
                }

                <p class="mb-1">
                    <a href="forgot-password.html">Şifremi Unuttum</a>
                </p>
                <p class="mb-0">
                    <a href="register.html" class="text-center">Yeni Bir Üyelik Oluşturun</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/Content/admin/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Content/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/admin/dist/js/adminlte.min.js"></script>
</body>
</html>
