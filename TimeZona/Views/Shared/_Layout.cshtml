                                <ul id="navigation">
                                    <li><a href="@Url.Action("Index","Default")">Ana Sayfa</a></li>
                                    <li><a href="@Url.Action("Magaza","Default")">Mağaza</a></li>
                                    <li><a href="@Url.Action("Hakkimizda","Default")">Hakkımızda</a></li>
                                    <li class="hot">
                                        <a href="@Url.Action("Magaza","Default")">Yeni Gelenler</a>
                                    </li>
                                    <li><a href="@Url.Action("ÜrünDetayları","Default")">Ürün Detayları</a></li>
