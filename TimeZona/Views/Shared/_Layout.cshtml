                            <!-- social -->
                            <div class="footer-social">
                                <a href="https://twitter.com/AnkaraUni?ref_src=twsrc%5Egoogle%7Ctwcamp%5Eserp%7Ctwgr%5Eauthor"><i class="fab fa-twitter"></i></a>
